# Production Environment Configuration for ALD Control System
# Copy this file to production.env and update with your actual values

# Core Application Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
MACHINE_ID=ALD-PROD-001

# PLC Configuration
PLC_TYPE=real
PLC_HOST=192.168.1.100
PLC_PORT=502

# Application Settings
LOG_LEVEL=INFO
STATUS_LOG_INTERVAL=300
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Monitoring and Alerting
GRAFANA_PASSWORD=change-this-secure-password
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_INTERVAL=10

# Performance Tuning
MAX_MEMORY_MB=1024
MAX_CPU_CORES=2.0
CONNECTION_POOL_SIZE=10
BULK_READ_CHUNK_SIZE=100

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/ald-control.pem

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health/basic
LB_HEALTH_CHECK_INTERVAL=5s
LB_TIMEOUT_CONNECT=5s
LB_TIMEOUT_CLIENT=50s
LB_TIMEOUT_SERVER=50s

# Backup and Recovery
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Feature Flags
ENABLE_BULK_READS=true
ENABLE_TRANSACTIONAL_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true

# Development/Debug (set to false in production)
DEBUG_MODE=false
ENABLE_DEBUG_LOGGING=false
MOCK_PLC_RESPONSES=false

# Container Configuration
RESTART_POLICY=unless-stopped
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
MONITORING_SUBNET=172.21.0.0/16

# Service Dependencies
WAIT_FOR_DB=true
DB_CONNECTION_TIMEOUT=30
PLC_CONNECTION_TIMEOUT=10

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue-green
ROLLBACK_ENABLED=true
HEALTH_CHECK_GRACE_PERIOD=60s

# External Integrations (optional)
# EXTERNAL_API_URL=https://api.external-system.com
# EXTERNAL_API_KEY=your-external-api-key
# WEBHOOK_URL=https://your-webhook-endpoint.com

# Compliance and Audit
AUDIT_LOGGING=true
COMPLIANCE_MODE=production
DATA_RETENTION_DAYS=365

# Time Zone
TZ=UTC

# Email Notifications (optional)
# SMTP_HOST=smtp.yourcompany.com
# SMTP_PORT=587
# SMTP_USER=alerts@yourcompany.com
# SMTP_PASSWORD=your-smtp-password
# ALERT_EMAIL=operations@yourcompany.com
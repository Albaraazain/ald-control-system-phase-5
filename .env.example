SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Unique machine identifier present in your Supabase `machines` table
MACHINE_ID=machine-001

# PLC backend: simulation (demo) or real
PLC_TYPE=simulation

# Real PLC connection (fallback IP/port)
PLC_IP=192.168.1.100
PLC_PORT=502

# Optional DHCP-friendly connection
# e.g., plc.local if mDNS is available
PLC_HOSTNAME=
# true/false to enable network discovery fallback
PLC_AUTO_DISCOVER=false

# Modbus 32-bit byte/word order: abcd | badc | cdab | dcba
PLC_BYTE_ORDER=badc

# Logging
LOG_LEVEL=INFO
LOG_FILE=machine_control.log
